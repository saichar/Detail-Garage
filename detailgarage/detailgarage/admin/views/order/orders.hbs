<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Order List</h1>
        <ol class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Order List</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        {{!-- <a href="/admin/user/add" class="btn btn-primary pull-right">Add</a> --}}
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{#if messages.error}}
                        <div class="alert alert-danger">{{ messages.error }}</div>
                        {{/if}}
                        {{#if messages.success}}
                        <div class="alert alert-success">{{ messages.success }}</div>
                        {{/if}}

                        <div class="col-sm-6 pull-right">
                            <div class="row search_div">
                                <div id="example1_filter" class="dataTables_filter"><label>Search: <input type="search" class="form-control input-sm search-text-box" placeholder="Search by keyword" aria-controls="example1"></label></div>
                            </div>
                        </div>
                        <table id="table" class="table table-bordered table-striped" data-toggle="table" data-url="/admin/order/getOrderList"
                            data-side-pagination="server" data-pagination="true" data-pagination-loop="false"
                            data-search="false" data-show-refresh="false" data-page-list="[]" data-page-size="{{admin_details.page_size}}"
                            data-undefined-text='' data-query-params="queryParams" data-cache="false">
                            <thead>
                                <tr>
                                    <th width="70px;" data-formatter="serialFormatter"> S No.</th>
                                    <th data-field="transaction_no"> Transaction Id</th>
                                    <th data-field="totQuantity"> Quantity</th>
                                    <th data-field="total_amount"> Amount</th>
                                    <th data-field="shipping_type"> Shipping Type</th>
                                    {{!-- <th data-field="status"> Status</th> --}}
                                    <th data-field="status" data-formatter="statusFormatter" data-events="actionPerformer">Status</th>
                                    <th class="action_td" data-formatter="actionFormatter">Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script>
    function serialFormatter(value, row, index) {
        var tableOptions = $('#table').bootstrapTable('getOptions');
        return (1 + index) + tableOptions.pageSize * (tableOptions.pageNumber - 1);
    }

    function statusFormatter(value, row, index) {
        if (row.status == 1) {
            return [
                '<a data-toggle="tooltip" style="color: #00a65a;"><strong>Delevered</strong></a>'
            ].join();
        } else if (row.status == 2){
            return [
                '<a data-toggle="tooltip" style="color: #ff0000;"><strong>Cancelled</strong></i></a>'
            ].join();
        } else {
            return [
                '<a data-toggle="tooltip" style="color: #3c8dbc;"><strong>Arriving Soon</strong></i></a>'
            ].join();
        }
    }

    function actionFormatter(value, row, index) {
        if (row.id) {
            // var delstr = "return confirm('Are you sure you want to delete this?')";
            return [
                '<a data-toggle="tooltip" class="btn btn-warning" title="Edit" href="/admin/order/edit/' + row.id + '"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>' + ' ' + '<a data-toggle="tooltip" class="btn btn-primary" title="View" href="/admin/order/view/' + row.id + '"><i class="glyphicon glyphicon-eye-open" aria-hidden="true"></i></a>'
            ].join();
        }
    }

    function queryParams(params) {
        params.search = $('.search-text-box').val();
        return params;
    }
</script>

<script>
    $(document).ready(function () {
        $('.search-text-box').on('input', function () {
            $('#table').bootstrapTable('refresh');
        });
    });
</script>