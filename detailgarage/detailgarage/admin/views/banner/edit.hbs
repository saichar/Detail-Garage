<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Edit Banner</h1>
        <ol class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active"><a href="/admin/banner">Banner</a></li>
            <li class="active">Edit Banner</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-8">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{#if messages.error}}
                        <div class="alert alert-danger">{{ messages.error }}</div>
                        {{/if}}
                        {{#if messages.success}}
                        <div class="alert alert-success">{{ messages.success }}</div>
                        {{/if}}
                        <!-- form start -->
                        <form action="/admin/banner/updaterecord" method="post" id="myForm" enctype="multipart/form-data">
                            <input type="hidden" name="id" value="{{data.id}}" />

                            <div class="box-body">
                                <div class="form-group">
                                    <label for="name">Name<span style="color: #ff0000">*</span></label>
                                    <input class="form-control" id="name" name="name" placeholder="Banner Name" type="text"
                                        required="required" value={{#if data.title}} "{{data.title}}" {{else}} "" {{/if}}>
                                </div>

                                <div class="form-group">
                                    <label for="description">Description</label>
                                    {{!-- <input class="form-control" id="description" name="description" placeholder="Description"
                                        type="text" value={{#if data.description}}
                                        "{{data.description}}" {{else}} "" {{/if}}> --}}

                                    <textarea name="description" id="editor1" placeholder="Description" rows="10"
                                        cols="85"
                                        required>{{#if data.description}} {{data.description}} {{else}} "" {{/if}}</textarea>
                                </div>

                                <div class="form-group">
                                    <label for="banner">Banner Image</label>
                                    <input class="form-control" id="banner" name="banner" type="file">
                                    {{#if data.image}}
                                    <img width="60" height="45" src="{{data.image}}" alt="Banner image" />
                                    {{/if}}
                                    <input type="hidden" name="oldimage" value="{{data.oldimage}}" />
                                </div>

                                <div class="form-group">
                                    <label>Select Status<span style="color: #ff0000">*</span></label>
                                    <select class="form-control" id="status" name="status">
                                        <option value="">Please Select Status</option>
                                        <option value="1" {{#ifEquals data.status '1' }} selected="selected"
                                            {{/ifEquals}}>Active</option>
                                        <option value="0" {{#ifEquals data.status '0' }} selected="selected"
                                            {{/ifEquals}}>In Active</option>
                                    </select>
                                </div>

                                <div class="box-footer">
                                    <button type="submit" name="submit" class="btn btn-primary">Submit</button>
                                    <a href="/admin/banner" name="cancel" class="btn btn-warning pull-right">Cancel</a>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>