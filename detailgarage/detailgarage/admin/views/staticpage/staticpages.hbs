<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Static page list</h1>
        <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Static page</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    {{!-- <div class="box-header">
                    <a href="/admin/staticpage/add" class="btn btn-primary pull-right">Add</a>
                    </div> --}}
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{#if messages.error}}
                        <div class="alert alert-danger">{{ messages.error }}</div>
                        {{/if}}
                        {{#if messages.success}}
                        <div class="alert alert-success">{{ messages.success }}</div>
                        {{/if}}

                        <div class="col-sm-6 pull-right">
                            <div class="row search_div">                            
                                <div id="example1_filter" class="dataTables_filter"><label>Search: <input type="search" class="form-control input-sm search-text-box" placeholder="Search by keyword" aria-controls="example1"></label></div>
                            </div>
                        </div>
                        <table id="table" class="table table-bordered table-striped" data-toggle="table" data-url="/admin/staticpage/getStaticpageList" data-side-pagination="server" data-pagination="true" data-pagination-loop="false" data-search="false" data-show-refresh="false" data-page-list="[]" data-page-size="{{admin_details.page_size}}" data-undefined-text='' data-query-params="queryParams"  data-cache="false">
                            <thead>
                                <tr>
                                    <th width="70px;" data-formatter="serialFormatter"> S No.</th>
                                    <th data-field="page_name"> Name</th>
                                    {{!-- <th data-field="status" data-formatter="statusFormatter" data-events="actionPerformer" >Status</th> --}}
                                    <th class="action_td" data-formatter="actionFormatter" >Action</th>
                                </tr>
                            </thead>
                        </table> 
                    </div>
                    
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script>
    function serialFormatter(value, row, index) {
        var tableOptions = $('#table').bootstrapTable('getOptions');
        return (1 + index) + tableOptions.pageSize * (tableOptions.pageNumber - 1);
    }

    {{!-- function statusFormatter(value, row, index) {
        if (row.status == 1) {
            return [
                '<a data-toggle="tooltip" style="color: #00a65a; cursor: pointer;" title="Active" href="/admin/staticpage/change_status/'+row.id+'"><i class="fa fa-2x fa-check" aria-hidden="true"></i></a>'
            ].join();
        } else {
            return [
                '<a data-toggle="tooltip" style="color: #ff0000; cursor: pointer;" title="In Active" href="/admin/staticpage/change_status/'+row.id+'"><i class="fa fa-2x fa-ban" aria-hidden="true"></i></a>'
            ].join();
        }
    } --}}

    function actionFormatter(value, row, index) {
        if (row.id) {
            var delstr = "return confirm('Are you sure you want to delete this?')";
            return [
                '<a data-toggle="tooltip" class="btn btn-warning" title="Edit" href="/admin/staticpage/edit/'+row.id+'"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>'+' '+'<a data-toggle="tooltip" class="btn btn-danger" title="Delete" href="/admin/staticpage/delete/'+row.id+'" onclick="'+delstr+'"><i class="fa fa-trash-o" aria-hidden="true"></i></a>',
            ].join();
        }
    }

    function queryParams(params) {
        params.search = $('.search-text-box').val();
        return params;
    }
</script>

<script>
    $(document).ready(function() {
        $('.search-text-box').on('input', function() {
            $('#table').bootstrapTable('refresh');
        });
    });
</script>