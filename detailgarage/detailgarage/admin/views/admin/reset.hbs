<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <b>Sunrise resort</b>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">

    <div class="response_messages" style="bottom:15px;">
        {{#if messages.error}}
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error!</strong> {{messages.error}}
        </div>
        {{/if}} 
        {{#if messages.success}}
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Success!</strong> {{messages.success}}
        </div>
        {{/if}}
    </div>

    <p class="login-box-msg">Reset password</p>

    <form action="/admin/resetpassword" method="post" id="myForm">
        <input type="hidden" name="id" value="{{id}}" >
        <input type="hidden" name="activationkey" value="{{activationkey}}" >

      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Password" name="password" required="required">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Confirm Password" name="cpassword" required="required">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <!-- /.col -->
        <div class="col-xs-5">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Reset Password</button>
        </div>
        <div class="col-xs-7">
          <a class="pull-right" href="/admin">login?</a>
        </div>
        <!-- /.col -->
      </div>
    </form>

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<!-- jQuery 3 -->
<script src="/components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="/components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- iCheck -->
<script src="/plugins/iCheck/icheck.min.js"></script>
<script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' /* optional */
    });
  });
</script>
</body>