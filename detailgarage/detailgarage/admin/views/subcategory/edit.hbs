<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Edit Category</h1>
        <ol class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active"><a href="/admin/category">Category</a></li>
            <li class="active">Edit Category</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-8">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{#if messages.error}}
                        <div class="alert alert-danger">{{ messages.error }}</div>
                        {{/if}}
                        {{#if messages.success}}
                        <div class="alert alert-success">{{ messages.success }}</div>
                        {{/if}}
                        <!-- form start -->
                        <form action="/admin/subcategory/updaterecord" method="post" id="myForm">
                            <input type="text" name="id" value="{{data.id}}" />
                            <input type="text" name="lightSpeedCatId" value="{{data.light_speed_cat_id}}" />
                            
                            <div class="box-body">

                                <div class="form-group">
                                    <label>Select Category<span style="color: #ff0000">*</span></label>
                                    <select class="form-control" id="category_id" name="category_id" required>
                                    <option value="">Please Select Category</option>
                                    {{#each catlist}}
                                    <option value={{this.id}} {{#ifEquals id  ../data.id}} selected {{/ifEquals}}>
                                        {{category_name}}</option>
                                    {{/each}}
                                    </select>
                                </div>

                                
                                <div class="form-group">
                                    <label for="name">Sub Category<span style="color: #ff0000">*</span></label>
                                    <input class="form-control" id="name" name="name" placeholder="Sub Category Name" type="text"
                                        required="required" value={{#if data.category_name}} "{{data.category_name}}" {{else}} "" {{/if}}>
                                </div>

                                <div class="form-group">
                                    <label for="name">Slug<span style="color: #ff0000">*</span></label>
                                    <input class="form-control" id="slug" name="slug" placeholder="Category Slug" type="text"
                                        required="required" value={{#if data.slug}} "{{data.slug}}" {{else}} "" {{/if}} readonly/>
                                </div>

                                <div class="form-group">
                                    <label>Select Status<span style="color: #ff0000">*</span></label>
                                    <select class="form-control" id="status" name="status">
                                        <option value="">Please Select Status</option>
                                        <option value="1" {{#ifEquals data.status '1' }} selected="selected" {{/ifEquals}}>Active</option>
                                        <option value="0" {{#ifEquals data.status '0' }} selected="selected" {{/ifEquals}}>In Active</option>
                                    </select>
                                </div>

                                <div class="box-footer">
                                    <button type="submit" name="submit" class="btn btn-primary">Submit</button>
                                    <a href="/admin/subcategory" name="cancel" class="btn btn-warning pull-right">Cancel</a>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
